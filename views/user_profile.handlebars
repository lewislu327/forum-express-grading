<div class="row mt-5 bg-white">
  <div class="col-md-4">
    <img class="img-responsive rounded-circle my-3" src="{{user.image}}" style="width: 250px;">
  </div> 
  <div class="col-md-8">
    <h2>{{user.name}}</h2>
    <p>{{user.email}}</p>
    <p>{{comments.length}}已評論餐廳</p>
    <p>{{user.FavoritedRestaurants.length}}收藏的餐廳</p>
    <p>{{user.Followings.length}}位Following</p>
    <p>{{user.Followers.length}}位Followers</p>
    <button type="button" class="btn btn-link">
      <a href="/users/{{user.id}}/edit">
        Edit
      </a>
    </button>
  </div> 
 

</div>
<div class="container mt-3">
  <h4>{{comments.length}}已評論餐廳</h4>
  <div class="row justify-content-center">
    {{#each comments}}
    <div class="card mx-3 my-2" style="width: 11rem;">
      <a href="/restaurants/{{this.Restaurant.id}}"><img class="card-img-top" src="{{this.Restaurant.image}}" alt="Card image cap"></a>
      <div class="card-body">
        <h5 class="card-title">{{this.Restaurant.name}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="container mt-3">
  <h4>{{user.FavoritedRestaurants.length}}收藏的餐廳</h4>
  <div class="row justify-content-center">
    {{#each FavoritedRestaurants}}
    <div class="card mx-3 my-2" style="width: 11rem;">
      <a href="/restaurants/{{this.id}}"><img class="card-img-top" src="{{this.image}}"
          alt="Card image cap"></a>
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="container mt-3">
  <h4>{{user.Followings.length}}位Followings</h4>
  <div class="row justify-content-center">
    {{#each Followings}}
    <div class="card mx-3 my-2" style="width: 11rem;">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="container mt-3">
  <h4>{{user.Followers.length}}位Followers</h4>
  <div class="row justify-content-center">
    {{#each Followers}}
    <div class="card mx-3 my-2" style="width: 11rem;">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
</div>
